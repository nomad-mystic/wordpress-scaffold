{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */
        /* Language and Environment */
        "target": "es2022",

        /* Modules */
        "module": "esnext",
        "rootDir": "./src",
        "moduleResolution": "node16",
        "rootDirs": [],
        "types": [
            "node"
        ],
        /* Emit */
        "outDir": "./dist",
        "removeComments": true,
        "importsNotUsedAsValues": "remove",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,

        /* Completeness */
        "skipLibCheck": true
    },
    "watchOptions": {
        "excludeDirectories": [
            "**/node_modules",
            "dist"
        ]
    }
}
